<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
android:orientation="vertical"
    tools:context="usst.lei.movieshow.DetailActivityFragment">

    <TextView android:text="@string/hello_world" android:layout_width="match_parent"
        android:id="@+id/tv_detail_moive_tilte"
        android:layout_height="wrap_content" android:textSize="30dp"
        android:padding="10dp"
        android:gravity="left|center_vertical"
        android:textColor="#ffffff"
        android:background="#00afff"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        >
        <ImageView
            android:id="@+id/image_detail_poster"
            android:layout_width="0dp"
            android:minHeight="100dp"
            android:src="@mipmap/ic_launcher"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/tv_detail_yearandvote"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:fontFamily="3"
            android:textSize="35dp"
            android:padding="10dp"
            android:text="2015\n5.0/10"
            android:maxLines="2"
            />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        >
<TextView
    android:id="@+id/tv_detail_description"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:text="afafafs"
    android:textSize="@dimen/abc_text_size_medium_material"
    />
    </ScrollView>
    <TextView
        android:id="@+id/tv_detail_likeOrnot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:gravity="center"
        android:background="@color/dislike"
        android:textColor="#ffffff"

        android:text="@string/dislike"
        />
</LinearLayout>
